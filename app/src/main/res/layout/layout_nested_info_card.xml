<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16"
        app:cardCornerRadius="@dimen/_8"
        app:cardElevation="@dimen/_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/holder_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="@dimen/_8"
                android:contentDescription="@string/character_image"/>
            <TextView
                android:id="@+id/holder_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/_16"
                android:textColor="@color/subtitle_color"
                style="@style/FontStyle.Body1"/>
            <TextView
                android:id="@+id/holder_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_16"
                android:layout_marginTop="@dimen/_4"
                android:layout_marginBottom="@dimen/_8"
                style="@style/FontStyle.Subtitle1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>